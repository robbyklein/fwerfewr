/*
  Variables
*/

// Colors
$white: #fff;
$white5: rgba(255, 255, 255, 0.05);
$white10: rgba(255, 255, 255, 0.1);
$white20: rgba(255, 255, 255, 0.2);
$white30: rgba(255, 255, 255, 0.3);
$white40: rgba(255, 255, 255, 0.4);
$white50: rgba(255, 255, 255, 0.5);
$white60: rgba(255, 255, 255, 0.6);
$white70: rgba(255, 255, 255, 0.7);
$white80: rgba(255, 255, 255, 0.8);
$white90: rgba(255, 255, 255, 0.9);

$black: #000;
$black90: rgba(0, 0, 0, 0.9);
$black80: rgba(0, 0, 0, 0.8);
$black70: rgba(0, 0, 0, 0.7);
$black60: rgba(0, 0, 0, 0.6);
$black50: rgba(0, 0, 0, 0.5);
$black40: rgba(0, 0, 0, 0.4);
$black30: rgba(0, 0, 0, 0.3);
$black20: rgba(0, 0, 0, 0.2);
$black10: rgba(0, 0, 0, 0.1);
$black5: rgba(0, 0, 0, 0.05);

$green: #26f316;
$tan: #dfd2bf;

// fonts
$font: "Pilat", sans-serif;
$font2: "Pilat Extended", sans-serif;
$font3: "Pilat Condensed", sans-serif;

// Breakpoints
$tinybp: 374px;
$smallbp: 500px;
$smbp: 640px;
$mediumbp: 800px;
$largebp: 1000px;
$xlargebp: 1200px;
$xxlargebp: 1340px;
$xxxlargebp: 1600px;

// Transitions
$fadeOff: left 0s 0.15s, opacity 0.15s;
$fadeOn: left 0s, opacity 0.15s;

/*
  Fonts
*/
@font-face {
  font-family: "Pilat Extended";
  src: url('{{ "PilatExtended-Black.woff" | asset_url }}') format("woff");
  font-weight: 900;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "Pilat Condensed";
  src: url('{{ "PilatCondensed-Bold.woff" | asset_url }}') format("woff");
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "Pilat";
  src: url('{{ "Pilat-Bold.woff" | asset_url }}') format("woff");
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

/*
  Reset and defaults
*/

* {
  margin: 0;
  padding: 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

html {
  max-width: 100vw;
  overflow-x: hidden;
}

body {
  font-size: 16px;
  font-weight: 400;
  line-height: 1.65;
  font-family: $font;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-transform: uppercase;
  background: $black;
  color: $green;
}

h1,
h2,
h3,
h4,
h5,
h6,
strong {
  font-weight: 900;
  line-height: 1;
  font-family: $font2;
  font-size: 16px;
}

a {
  text-decoration: none;
}

li {
  list-style: none;
}

input,
select,
button,
textarea {
  -webkit-appearance: none;
  -moz-appearance: none;
  -o-appearance: none;
  -ms-appearance: none;
  appearance: none;
  border: none;
  background: transparent;
  outline: none;
  font-family: $font;
  font-size: 16px;
}

input[type="email"],
input[type="text"],
input[type="password"],
input[type="search"] {
  display: block;
  width: 100%;
}

a,
button,
label,
input[type="submit"],
input[type="checkbox"],
input[type="radio"] {
  cursor: pointer;
}

img,
svg {
  display: block;
  max-width: 100%;
}

/*
  Helpers
*/

.width {
  margin: 0 auto;
  width: calc(100% - 40px);
  max-width: 1440px;

  @media (min-width: $largebp) {
    width: calc(100% - 80px);
  }
}

.relative {
  position: relative;
}

.hide {
  display: none;
}

.offscreen {
  position: absolute;
  left: -9999px;
}

.caps {
  text-transform: uppercase;
}

.center-text {
  text-align: center;
}

.button {
  display: inline-block;
  padding: 0 24px;
  line-height: 62px;
  color: $black;
  background-color: $green;
  text-align: center;
  font-family: $font2;
  font-weight: 900;

  &.full {
    display: block;
    width: 100%;
  }

  &.fixed-260 {
    width: 260px;
  }
}

/*
  Home Hero
*/

.home-hero {
  background-image: url('{{ "home-hero.jpg" | asset_url }}');
  background-size: cover;
  background-position: center center;
  padding: 100px 0 60px;

  @media (min-width: $largebp) {
    padding: 387px 0 120px;
  }
}

.home-hero-text {
  .mobile {
    max-width: 400px;
    margin: 0 auto;
    display: block;

    @media (min-width: $largebp) {
      display: none;
    }
  }

  .desktop {
    display: none;

    @media (min-width: $largebp) {
      display: block;
      max-width: 1400px;
      margin: 0 auto;
    }
  }
}

.home-hero-buttons {
  margin-top: 520px;

  @media (min-width: $largebp) {
    margin-top: 185px;
  }

  p + p {
    margin-top: 30px;
  }
}

/*
  Home Split
*/
.home-split {
  @media (min-width: $largebp) {
    display: flex;
  }
}

.home-split-left,
.home-split-right {
  @media (min-width: $largebp) {
    width: 50%;
  }
}

.home-split-left {
  background: white;
  display: flex;
  align-items: center;
}

.home-split-left-image {
  max-width: 700px;
  margin: 0 auto;
}

.home-split-right {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 0;
}

.home-split-right-text {
  width: 90%;
  max-width: 500px;

  h2 {
    font-size: 30px;
    margin-bottom: 30px;

    @media (min-width: $largebp) {
      font-size: 36px;
    }
  }

  li {
    font-size: 21px;
  }

  li + li {
    margin-top: 20px;
  }
}

/*
  Home Images
*/

.home-images {
  background: $green;
  padding: 60px 0 0;

  @media (min-width: $mediumbp) {
    padding: 100px 0 0;
  }
}

.home-images-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -10px;

  @media (min-width: $mediumbp) {
    margin: -15px;
  }
}

.home-images-grid-item {
  padding: 10px;
  width: 50%;

  @media (min-width: $mediumbp) {
    width: 33.33333%;
    padding: 15px;
  }
}

.home-images-grid-item-image {
  position: relative;
  padding-bottom: 100%;

  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

/*
 Home Text
*/

.home-text {
  background: $green;
  padding: 40px 0;

  .width {
    max-width: 1700px;
  }

  svg {
    width: 100%;
  }
}

/*
 Home Works
*/

.home-works {
  padding: 60px 0;

  .width {
    @media (min-width: $largebp) {
      display: flex;
      justify-content: space-between;
    }
  }

  h2 {
    font-size: 30px;
    margin-bottom: 25px;

    @media (min-width: $largebp) {
      font-size: 38px;
      margin-bottom: 40px;
    }
  }

  li + li {
    margin-top: 20px;
  }

  p,
  li {
    font-size: 21px;
    font-weight: 700;
  }

  img {
    margin-bottom: 20px;
  }
}

/*
  Home Buy
*/

.home-buy {
  padding: 60px 0;
  background: $green;

  @media (min-width: $largebp) {
    padding: 100px 0;
  }
}

.home-buy-button {
  display: block;
  border: 2px solid $black;
  color: $black;
  text-align: center;
  font-weight: 900;
  font-family: $font2;
  font-size: 9vw;
  padding: 0 20px;
  max-width: 800px;
  line-height: 157px;
  margin: 0 auto;
  padding-bottom: 3px;
  font-size: 50px;

  @media (min-width: $largebp) {
    font-size: 88px;
    padding: 0 20px;
  }
}

/*
  Footer
*/

.footer {
  background: $black;
  padding: 20px;
  text-align: center;

  ul {
    @media (min-width: $largebp) {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  }

  li + li {
    margin-top: 10px;

    @media (min-width: $largebp) {
      margin-top: 0px;
    }
  }

  a {
    color: $green;
    font-weight: bold;

    @media (min-width: $largebp) {
      font-size: 17px;
    }
  }
}

/*
  Cart
*/

.cart-page {
  background: $black;
  padding: 60px 0;
  color: $white;

  h1,
  h2,
  h3,
  p,
  span,
  .quantity-selector button,
  a {
    font-size: 23px;

    @media (min-width: $mediumbp) {
      font-size: 50px;
    }

    @media (min-width: $largebp) {
      font-size: 73px;
    }
  }
}

.cart-header,
.cart-bottom,
.cart-subtotal {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cart-header {
  h1,
  p {
    color: $white;
    font-family: $font2;
  }

  span {
    color: $green;
  }
}

.cart-subtotal {
  border-bottom: 3px solid $white;
  padding: 10px 0;

  @media (min-width: $mediumbp) {
    border-bottom: 7px solid $white;
    padding: 20px 0;
  }
}

.cart-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 3px solid $white;
  font-family: $font2;
  align-items: center;

  @media (min-width: $mediumbp) {
    border-bottom: 7px solid $white;
    padding: 20px 0;
  }
}

.cart-item-title {
  flex: 1;
  margin: 0 20px;
  color: $green;

  @media (min-width: $mediumbp) {
    margin: 0 40px;
  }

  a {
    color: $green;
    transition: 0.2s color;

    &:hover {
      color: $white;
    }
  }

  svg {
    width: 90px;
    display: inline-block;
    vertical-align: middle;
    margin: -2px 0 0 5px;

    @media (min-width: $mediumbp) {
      width: 200px;
      margin: -2px 0 0 10px;
    }

    @media (min-width: $largebp) {
      width: 260px;
    }
  }
}

.cart-bottom {
  padding: 10px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;

  .green {
    color: $green;
  }

  @media (min-width: $mediumbp) {
    padding: 20px 0;
  }
}

.cart-checkout {
  margin-top: 80px;
}

.cart-empty {
  text-align: center;
  padding: 250px 0;

  h1 {
    margin-bottom: 10px;
  }

  p,
  a {
    font-family: $font;
    font-size: 20px;
    color: $white;
    font-weight: bold;
  }

  a {
    color: $green;
  }
}

/*
  Quantity Selector
*/

.quantity-selector {
  align-items: center;
  display: flex;

  &,
  button {
    font-size: 73px;
    color: $white;
  }

  button {
    cursor: pointer;
  }

  span {
    margin: 0 10px;
  }
}

/*
  Basic Page
*/

.basic-page {
  padding: 80px 0;

  @media (min-width: $largebp) {
    min-height: calc(100vh - 250px);
  }

  .width {
    max-width: 700px;
  }

  h1 {
    text-align: center;
    font-size: 50px;
    text-transform: uppercase;

    @media (min-width: $largebp) {
      font-size: 73px;
    }
  }

  .page-body {
    margin-top: 40px;

    h1 {
      text-align: left;
    }
  }
}

/*
  RTE
*/
.rte {
  font-size: 18px;

  & > * + * {
    margin-top: 25px;
  }

  p strong {
    font-family: $font;
    font-weight: 700;
  }

  h1,
  h2,
  h3,
  h4 {
    margin-top: 60px;
    text-transform: uppercase;
  }

  h1,
  h2 {
    font-size: 50px;
  }

  h3 {
    font-size: 36px;
  }

  h4 {
    font-size: 26px;
  }

  blockquote {
    border-left: 4px solid $green;
    padding-left: 28px;
    font-size: 20px;
  }

  li {
    margin-left: 18px;
  }

  ul li {
    list-style: disc;
  }

  ol li {
    list-style: decimal;
  }

  li + li {
    margin-top: 10px;
  }

  a {
    color: $green;
    text-decoration: underline;
    transition: 0.2s color;

    &:hover {
      color: $black;
    }
  }
}

/*
  Header
*/

.header {
  padding: 18px 0;

  .width {
    display: flex;
    align-items: center;
  }

  .desktop {
    display: none;

    @media (min-width: $largebp) {
      display: block;
    }
  }

  .mobile {
    @media (min-width: $largebp) {
      display: none;
    }
  }
}

.header-logo {
  flex: 1;
  margin-right: 20px;
}

.header-cart {
  background: $green;
  color: $black;
  padding: 0 8px 3px;
  display: inline-block;
  font-size: 20px;

  @media (min-width: $largebp) {
    font-size: 26px;
    margin-left: 40px;
  }
}

/*
  Product Split
*/

.product-split {
  @media (min-width: $largebp) {
    display: flex;
  }
}

.product-split-left,
.product-split-right {
  @media (min-width: $largebp) {
    width: 50%;
  }
}

.product-split-left {
  background: white;
  display: flex;
  align-items: center;
  padding-bottom: 100px;

  .slick-next,
  .slick-prev {
    position: absolute;
    bottom: 60px;
  }

  .slick-next {
    right: 40px;
  }

  .slick-prev {
    left: 40px;
  }
}

.product-split-left-image {
  img {
    max-width: 700px;
    margin: 0 auto;
  }
}

.product-split-right {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 0;
}

.product-split-right-text {
  width: 90%;
  max-width: 500px;

  h2 {
    font-size: 30px;
    margin-bottom: 30px;

    @media (min-width: $largebp) {
      font-size: 36px;
    }
  }

  li {
    font-size: 21px;
  }

  li + li {
    margin-top: 20px;
  }
}
