<div class="basic-page">
  <div class="width">
    <h1 class="on-ready fade-in-up">{{ page.title }}</h1>
    
    <div class="page-body rte on-ready fade-in-up delay-2">

      <div class="contact-form">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
              <p class="form-success">{{ 'contact.form.post_success' | t }}</p>
          {% endif %}

          {{ form.errors | default_errors }}

          <div class="field">
            <label for="name">Name</label>
            <input required type="text" id="name" name="contact[name]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
          </div>
  
          <div class="field">
            <label for="email">Email Address</label>
            <input required type="email" id="email" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="{% if form.errors contains 'email' %}input--error{% endif %}">
          </div>

          <div class="field">
            <label for="message">{{ 'contact.form.message' | t }}</label>
            <textarea required id="message" name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>

          <div class="field">
            <button type="submit" class="button small">Submit</button>
          </div>
        {% endform %}
      </div>



    </div>
  </div>
</div>

